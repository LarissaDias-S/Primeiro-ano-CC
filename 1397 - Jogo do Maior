#include <stdio.h>
#include <stdlib.h>
 
int main() {
 int n=1, a, b, i, conta, contb;
 
 while(n != 0){
 scanf("%d", &n);
 conta=0; contb = 0;
 
 for(i=0; i < n; i++){
     
     scanf("%d %d", &a, &b);
     
     if(a > b){
         conta++;
     }
     else if(b > a){
         contb++;
     }
     
 }
 
 if(n != 0){
 printf("%d %d\n", conta, contb);
 }
 }
    return 0;
}
