#include <stdio.h>
#include <stdlib.h>
 
int main() {
int n, x, y, soma, i, j, cont;

scanf("%d", &n);

for(i=0; i < n; i++){
    cont=0;
    scanf("%d %d", &x, &y);
    soma=0;
    j=x;
     while(cont < y){
         
         if(j % 2 != 0){
             soma += j;
             cont++;
         }
         j++;
     }   
  
    printf("%d\n", soma);
} 
    return 0;
}
