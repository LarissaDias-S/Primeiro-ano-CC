#include <stdio.h>
#include <stdlib.h>
 
int main() {
 int c, n, i, j, s;
 
 scanf("%d", &c);
 
 for(i=0; i < c; i++) {
     s=0;
 scanf("%d", &n);
 
 for(j=0; j < n; j++){
     
     if(j % 2 == 0){
         
         s += 1;
     }
     else{
         s -= 1;
     }
 }
     
     printf("%d\n", s);
     
 }
 
    return 0;
}
